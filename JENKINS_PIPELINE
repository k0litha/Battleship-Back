pipeline {
  agent any
    
  tools {nodejs "NodeJs"}
    
  stages {
            
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm install forever -g'

      }
    }  

    stage('Deliver') {
      steps {
        sh 'forever start server.js'
        sh 'forever list'
      }
  }
           
  }
}