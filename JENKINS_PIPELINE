pipeline {
  agent any
    
  tools {nodejs "NodeJs"}
    
  stages {
            
    stage('Build') {
      steps {
        bat 'npm install'

      }
    }  

    stage('Test') {
      steps {
        bat 'mocha test/apitests.js --timeout 10000'
      }
  }
    stage('Deliver') {
      steps {
        bat 'START npm start'
        input message: 'Finished using the Battleship Server? (Click "Proceed" to continue)'
      }
  }

           
  }
}